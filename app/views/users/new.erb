<h1>CREATE ACCOUNT</h1>

<form method="POST" action="/users">

  <div>
    <label>Email:</label>
    <input type="text" name="email" value="<%= @user.email %>">
  </div>

  <div>
    <label>Password:</label>
    <input type="password" name="password">
  </div>

  <div>
    <input type="submit" value="Create Account">
  </div>

</form>

<a href="/">Home</a>