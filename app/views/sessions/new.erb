<h1>LOGIN PAGE</h1>

<% if @error %>
  <p><%= @error %></p>
<% end %>

<form method="POST" action="/sessions">

  <div>
    <label>Email:</label>
    <input type="text" name="email">
  </div>

  <div>
    <label>Password:</label>
    <input type="password" name="password">
  </div>

  <div>
    <input type="submit" value="Login">
  </div>
  
</form>